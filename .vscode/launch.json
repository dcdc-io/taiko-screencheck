    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Run Test Harness",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\_test_harness\\node_modules\\taiko\\bin\\taiko.js",
            "cwd": "${workspaceFolder}\\_test_harness",
            "args": ["index.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "-i"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ]
        }
    ]
}